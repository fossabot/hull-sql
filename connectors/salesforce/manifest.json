{
  "name": "Salesforce SOQL Importer",
  "description": "Import data from your Salesforce instance",
  "picture": "picture.png",
  "source": "salesforce",
  "logo": "logo.png",
  "version": "0.3.19",
  "tags": [
    "incoming",
    "oneColumn",
    "beta-release",
    "sql-accounts"
  ],
  "private_settings": [
    {
      "type": "string",
      "format": "title",
      "name": "connector_info",
      "title": "Connector Configuration"
    },
    {
      "name": "import_type",
      "title": "Import type",
      "description": "What do you want to import to Hull ?",
      "type": "string",
      "enum": [
        "users",
        "accounts",
        "events"
      ],
      "default": "users",
      "required" : true
    },
    {
      "name": "enabled",
      "title": "Enable Sync (default interval is 3 hours)",
      "type": "boolean",
      "default": "false"
    },
    {
      "name": "sync_interval",
      "title": "Sync interval (in minutes)",
      "type": "string",
      "default": "180",
      "enum": [ "30", "60", "180", "360", "720", "1440" ]
    },
    {
      "name": "overwrite",
      "title": "Use SQL value in case of data conflict",
      "type": "boolean",
      "default": "true"
    },
    {
      "name": "import_days",
      "title": "Incremental Queries - Start Date (x days ago)",
      "description": "Enter the number of days and the connector will make a variable called 'import_start_date' available to your query that allows you to run incremental queries. If your SQL query does not use this variable at all, this setting has no effect.",
      "type": "number",
      "default": "5"
    },
    {
      "type": "string",
      "format": "title",
      "name": "db_info",
      "title": "Database connection"
    },
    {
      "name": "db_type",
      "type": "string",
      "title": "Type",
      "enum": [
        "salesforce"
      ],
      "default": "salesforce",
      "required" : true
    },
    {
      "title": "Refresh token",
      "name": "refresh_token",
      "type": "string"
    },
    {
      "title": "Access token",
      "name": "access_token",
      "type": "string"
    },
    {
      "title": "Instance URL",
      "name": "instance_url",
      "type": "string"
    },
    {
      "name": "query",
      "title": "Query to run",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_sync_at",
      "title": "Last sync",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_updated_at",
      "title": "Last updated_at",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_job_id",
      "title": "Last job ID",
      "type": "string",
      "format": "hidden"
    }
  ],
  "resources": [],
  "readme": "readme.md",
  "tabs": [
    {
      "title": "Query Editor",
      "url": "admin.html",
      "size": "large",
      "editable": true
    }
  ],
  "ui": false,
  "schedules": [
    {
      "url": "/sync",
      "type": "interval",
      "value_from": "private_settings.sync_interval",
      "default": "180"
    },
    {
      "url": "/status",
      "type": "cron",
      "value": "30 * * * *"
    }
  ]
}
